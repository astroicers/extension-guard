{
  "name": "extension-guard-vscode",
  "displayName": "Extension Guard",
  "description": "Security scanner for VS Code extensions",
  "version": "0.6.0",
  "publisher": "aspect-guard",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/astroicers/extension-guard"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "extension-guard": [
        {
          "id": "extensionGuardView",
          "name": "Extensions"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extension-guard",
          "title": "Extension Guard",
          "icon": "resources/shield.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "extension-guard.scan",
        "title": "Extension Guard: Scan All Extensions",
        "icon": "$(refresh)"
      },
      {
        "command": "extension-guard.scanExtension",
        "title": "Extension Guard: Scan This Extension"
      },
      {
        "command": "extension-guard.showReport",
        "title": "Extension Guard: Show Security Report",
        "icon": "$(file)"
      },
      {
        "command": "extension-guard.showExtensionDetail",
        "title": "Extension Guard: Show Extension Details"
      },
      {
        "command": "extension-guard.search",
        "title": "Extension Guard: Search Extensions",
        "icon": "$(search)"
      },
      {
        "command": "extension-guard.filter",
        "title": "Extension Guard: Filter by Risk Level",
        "icon": "$(filter)"
      },
      {
        "command": "extension-guard.clearFilters",
        "title": "Extension Guard: Clear Filters",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension-guard.search",
          "when": "view == extensionGuardView",
          "group": "navigation@1"
        },
        {
          "command": "extension-guard.filter",
          "when": "view == extensionGuardView",
          "group": "navigation@2"
        },
        {
          "command": "extension-guard.scan",
          "when": "view == extensionGuardView",
          "group": "navigation@3"
        },
        {
          "command": "extension-guard.showReport",
          "when": "view == extensionGuardView",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run build -- --watch",
    "package": "pnpm run build && vsce package --no-dependencies",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@aspect-guard/core": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.0"
  }
}
